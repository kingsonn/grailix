# Grailix Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# CRON SECRET (for scheduled agent execution)
# ============================================
# Generate a secure random string for production
# Example: openssl rand -base64 32
CRON_SECRET=replace_with_secure_random_string

# ============================================
# SUPABASE
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
NEXT_PUBLIC_SUPABASE_SERVICE_KEY=your_service_role_key_here

# ============================================
# GROQ API (for LLM sentiment analysis)
# ============================================
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# GOOGLE SHEETS (for Agent-1 ingestion)
# ============================================
GOOGLE_SHEET_ID=your_google_sheet_id_here
# Service account JSON as a single-line string
# Example: {"type":"service_account","project_id":"..."}
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your_project"}

# ============================================
# PLATFORM SETTINGS
# ============================================
# Platform fee for payouts (default: 0.02 = 2%)
PLATFORM_FEE=0.02

# ============================================
# BLOCKCHAIN (if using on-chain features)
# ============================================
# Add your RPC URLs and contract addresses here if needed
# NEXT_PUBLIC_RPC_URL=
# NEXT_PUBLIC_CONTRACT_ADDRESS=
